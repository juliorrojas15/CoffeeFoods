<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="sty_BotonAmarillo">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/btn_amarillo</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="sty_BotonAzul">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/btn_azul</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Blanco</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sty_BotonRojo">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_rojo</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Blanco</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="sty_BotonGris">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/boton_gris</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="sty_BotonVerde">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/btn_verde</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sty_CheckBox">
        <item name="android:visibility">visible</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="sty_RadioButton">
        <item name="android:visibility">visible</item>
        <item name="android:textColor">@color/Negro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="sty_Space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>
</resources>
